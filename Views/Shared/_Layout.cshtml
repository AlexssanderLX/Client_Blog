@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Engenharia de Materiais</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600&display=swap" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Space Grotesk', system-ui, sans-serif;
            background: #f2efea;
            color: #3c312c;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header {
            position: sticky;
            top: 0;
            width: 100%;
            background: rgba(15, 9, 6, 0.9);
            backdrop-filter: blur(12px);
            z-index: 20;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.25);
        }

        .header-inner {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 2rem;
            gap: 1rem;
        }

        .brand {
            font-size: 1.1rem;
            letter-spacing: 0.35em;
            color: #fdfbf9;
            font-weight: 600;
        }

        .nav-links {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

            .nav-links a {
                text-transform: uppercase;
                letter-spacing: 0.08em;
                font-size: 0.75rem;
                color: #fdfbf9;
                text-decoration: none;
                padding: 0.45rem 1rem;
                border-radius: 999px;
                transition: transform 0.2s ease, background 0.2s ease;
            }

                .nav-links a:hover {
                    transform: translateY(-1px);
                    background: rgba(255, 255, 255, 0.1);
                }

        .cta-link {
            border: 1px solid #fdfbf9;
        }

        main {
            flex: 1;
            padding-top: 1rem;
        }

        footer {
            text-align: center;
            padding: 1.5rem;
            background: #2d241f;
            color: #d1c6bb;
            font-size: 0.9rem;
        }

        @@media (max-width: 900px) {
            .header-inner {
                flex-direction: column;
            }

            .nav-links {
                flex-wrap: wrap;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="header-inner">
            <div class="brand">ENGENHARIA DE MATERIAIS</div>
            <nav class="nav-links">
                <a href="#portfolio">Portfólio</a>
                <a href="#about">Sobre</a>
                <a href="#contato" class="cta-link">Contato</a>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        © 2024 – Estudante de Engenharia de Materiais. Imagens via Unsplash.
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
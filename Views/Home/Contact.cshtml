@model ClientBlog.Models.Contact

<div class="container">
    <div class="contact-container page-card pro-card">
        <h1 class="contact-title">Contact Me</h1>

        <ul class="contact-list">
            <li>
                <a class="btn-contact btn-phone" href="tel:@Model.CellNumber">📞 @Model.CellNumber</a>
            </li>
            <li>
                <a class="btn-contact btn-instagram" href="@Model.Instagram" target="_blank">📸 Instagram</a>
            </li>
            <li>
                <a class="btn-contact btn-linkedin" href="@Model.Linkedin" target="_blank">💼 LinkedIn</a>
            </li>
            <li>
                <a class="btn-contact btn-email" href="mailto:@Model.Email">✉️ @Model.Email</a>
            </li>
        </ul>
    </div>
</div>

<footer>
    © 2025 Alexssander Ferreira de Almeida - All rights reserved
</footer>

<style>
    /* ===== Container & card ===== */
    .contact-container {
        text-align: center;
        max-width: 500px;
        margin: 0 auto;
    }

    /* ===== Título ===== */
    .contact-title {
        font-size: 2rem;
        font-weight: bold;
        color: #8B5E34; /* harmoniza com headings do site */
        margin-bottom: 25px;
    }

    /* ===== Lista de botões ===== */
    .contact-list {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 15px;
        align-items: center;
    }

        .contact-list li {
            width: 100%;
            max-width: 300px;
        }

    /* ===== Botões ===== */
    .btn-contact {
        display: inline-block;
        width: 100%;
        padding: 12px 20px;
        font-size: 18px;
        border-radius: 8px;
        text-align: center;
        text-decoration: none;
        color: #fff;
        transition: all 0.2s ease;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    /* cores específicas para cada botão */
    .btn-phone {
        background-color: #005f8a;
        border: 1px solid #004466;
    }

    .btn-instagram {
        background-color: #c13584;
        border: 1px solid #a82a6e;
    }

    .btn-linkedin {
        background-color: #0077b5;
        border: 1px solid #005f8a;
    }

    .btn-email {
        background-color: #28a745;
        border: 1px solid #1e7e34;
    }

    /* hover suave */
    .btn-contact:hover {
        filter: brightness(1.15);
    }

    /* ===== Footer ===== */
    footer {
        background-color: #2b2b2b !important;
        color: #eaeaea;
        padding: 5px 0;
        text-align: center;
        border-top: 2px solid #4a4a4a;
        font-size: 14px;
    }

    /* ===== Responsividade ===== */
    @@media (max-width: 600px) {
        .contact-list li

    {
        max-width: 90%;
    }

    .contact-title {
        font-size: 1.8rem;
    }

    .btn-contact {
        font-size: 16px;
        padding: 10px 14px;
    }

    }
</style>

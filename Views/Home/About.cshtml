@{
    ViewData["Title"] = "About Page";
}

<div class="about-wrapper">
    <div class="about-card">
        <h1 class="neon-title">About Me</h1>

        <div class="about-section">
            <p>
                I’m a professional specialized in delivering high-quality projects with precision
                and excellence. Here you’ll find more about my journey, vision, and what drives
                my work forward.
            </p>
        </div>
    </div>
</div>

<style>
    /* Wrapper central */
    .about-wrapper {
        display: flex;
        justify-content: center;
        padding: 40px 15px;
    }

    /* CARD PRINCIPAL */
    .about-card {
        background: rgba(255, 255, 255, 0.9);
        padding: 40px 30px;
        max-width: 950px;
        width: 100%;
        border-radius: 20px;
        border: 2px solid #003a6b;
        box-shadow: 0 0 15px rgba(0, 170, 255, 0.25);
        backdrop-filter: blur(3px);
    }

    /* Título neon */
    .neon-title {
        background-color: #001a33;
        color: #00eaff;
        padding: 15px 25px;
        text-align: center;
        font-size: 2.7rem;
        font-weight: bold;
        border: 2px solid #0077cc;
        border-radius: 10px;
        margin-bottom: 25px;
        /* Efeito neon */
        text-shadow: 0 0 5px #00eaff, 0 0 10px #00eaff, 0 0 20px #00eaff, 0 0 40px #0088cc;
        box-shadow: 0 0 10px #005e99, inset 0 0 10px #003a6b;
    }

    /* SEÇÃO INTERNA */
    .about-section {
        background: #ffffff;
        border: 1px solid #cfd6e1;
        border-radius: 12px;
        padding: 25px;
        margin-top: 20px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
    }

        .about-section p {
            font-size: 1.25rem;
            color: #333;
            line-height: 1.8;
        }

    /* RESPONSIVIDADE */
    @@media (max-width: 600px) {
        .neon-title {
            font-size: 2rem;
            padding: 10px 15px;
        }

        .about-section p {
            font-size: 1.1rem;
        }

        .about-card {
            padding: 25px 15px;
        }
    }
</style>

@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="privacy-wrapper">
    <div class="privacy-card">

        <h1 class="privacy-title">@ViewData["Title"]</h1>

        <p class="privacy-text">
            Use this page to detail your site's privacy policy.
        </p>

    </div>
</div>

<style>

    /* Wrapper central */
    .privacy-wrapper {
        display: flex;
        justify-content: center;
        padding: 60px 15px;
        text-align: center;
    }

    /* Card */
    .privacy-card {
        background: rgba(255, 255, 255, 0.9);
        padding: 40px 35px;
        max-width: 900px;
        width: 100%;
        border-radius: 20px;
        border: 2px solid #003a6b;
        box-shadow: 0 0 15px rgba(0, 170, 255, 0.25);
        backdrop-filter: blur(3px);
    }

    /* Título neon igual ao Home */
    .privacy-title {
        background-color: #001a33;
        color: #00eaff;
        padding: 15px 30px;
        font-size: 2.7rem;
        font-weight: bold;
        border: 2px solid #0077cc;
        border-radius: 10px;
        margin-bottom: 25px;
        text-shadow: 0 0 5px #00eaff, 0 0 10px #00eaff, 0 0 20px #00eaff, 0 0 40px #0099ff;
        box-shadow: 0 0 10px #005e99, inset 0 0 10px #003a6b;
    }

    /* Texto */
    .privacy-text {
        color: #333;
        font-size: 1.3rem;
        font-weight: 500;
        margin-top: 20px;
        line-height: 1.7;
    }

    /* Responsividade */
    @@media (max-width: 600px) {
        .privacy-card {
            padding: 30px 20px;
        }

        .privacy-title {
            font-size: 2rem;
            padding: 10px 20px;
        }

        .privacy-text {
            font-size: 1.15rem;
        }
    }

</style>
